---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HorizontalCard from '../../components/HorizontalCard.astro';

export async function getStaticPaths({ paginate }) {
  let allData = await fetch(
    `https://glenmalaj.cdn.prismic.io/api/v2?access_token=${
      import.meta.env.PRISMIC_ACCESS_TOKEN
    }`
  )
    .then((res) => res.json())
    .catch((e) => console.log(e));

  const masterRef = allData.refs.filter(({ id }) => id === 'master')[0].ref;
  let projects = await fetch(
    `https://glenmalaj.cdn.prismic.io/api/v2/documents/search?ref=${masterRef}&access_token=${
      import.meta.env.PRISMIC_ACCESS_TOKEN
    }`
  )
    .then((res) => res.json())
    .catch((e) => console.log(e));
  projects = projects.results;
  return paginate(projects, { pageSize: 6 });
}
const { page } = Astro.props;
---

<BaseLayout title='Euglen Malaj | Projects'>
  <div>
    <div class='text-3xl w-full font-bold mb-5'>Projects Header</div>
  </div>

  {
    page.data.map(({ data, slugs }) => {
      return (
        <HorizontalCard
          title={data.title[0].text}
          img={data.images[0].image.url}
          desc={data.description[0].text.slice(0, 100) + '...'}
          url={`/projects/${slugs[0]}`}
          badge='FOSS'
        />
      );
    })
  }

  <div class='flex justify-between'>
    {
      page.url.prev ? (
        <a href={page.url.prev} class='btn btn-ghost my-10 mx-5'>
          {' '}
          <svg
            class='h-6 w-6 fill-current md:h-8 md:w-8'
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
          >
            <path d='M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z' />
          </svg>{' '}
          More recent projects
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class='btn btn-ghost my-10 mx-5'>
          Older projects{' '}
          <svg
            class='h-6 w-6 fill-current md:h-8 md:w-8'
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
          >
            {' '}
            <path d='M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z' />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
