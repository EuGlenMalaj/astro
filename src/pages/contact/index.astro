---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout location="/contact">
  <h1 class='text-3xl w-full font-bold mb-5'>Let's get in touch</h1>
  <div class='w-full mt-10'>
    <form
      class='grid grid-cols-2 auto-rows-auto gap-4 w-full'
      name='contact'
      action="/contact/success"
      method='POST'
      data-netlify='true'
    >
      <label
        class='xl:col-span-1 lg:col-span-1 md:col-span-1 sm:col-span-full col-span-full flex flex-col mb-4'
      >
        Name
        <input
          class='border-[1px] border-gray-300 rounded-md px-3 py-2'
          type='text'
          name='name'
        />
      </label>
      <label
        class='xl:col-span-1 lg:col-span-1 md:col-span-1 sm:col-span-full col-span-full flex flex-col mb-4'
      >
        Email
        <input
          class='border-[1px] border-gray-300 rounded-md px-3 py-2'
          type='email'
          name='email'
        />
      </label>
      <label class='col-span-full flex flex-col mb-4'>
        Message
        <textarea
          rows='5'
          class='w-full border-[1px] border-gray-300 rounded-md px-3 py-2'
          name='message'></textarea></label
      >
      <button class='col-span-full btn rounded-md mt-3' type='submit'
        >Send</button
      >
    </form>
  </div>
</BaseLayout>
